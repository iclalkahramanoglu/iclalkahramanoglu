def kreis_umfang(r):
  pi=3.14
  print("Umfang="+ str(2*pi*r))
  
  def kreis_flache(r):
    pi=3.14
    print("Flaeche=" + str(pi*r*r))
    
    def zylinder_volumen(r,h):
      pi=3.14
      print("Flaeche=" + str(pi*r*r*h))
import test
